@page
@model IndexModel
@{
    ViewData["Title"] = "SafeVault - Submit Data";
}

<div class="container mt-3">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="d-flex justify-content-between align-items-center p-3 bg-light border rounded shadow-sm">
            <div>
                <h4 class="mb-0">Welcome, <strong>@User.Identity.Name</strong>!</h4>
                <small class="text-muted">Current Role: <span class="badge bg-secondary">@User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value</span></small>
            </div>

            <form method="post" asp-page-handler="Logoff">
                <button type="submit" class="btn btn-outline-danger btn-sm">Logoff</button>
            </form>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            You are not logged in. <a href="/Login">Click here to Login.</a>
        </div>
    }
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center mb-4">
                <h2 class="mb-1">SafeVault Secure Entry</h2>
                <p class="text-muted">Use the form below to register a new user record. All inputs are sanitized and validated to ensure data integrity.</p>

                <div class="alert alert-secondary py-2" style="font-size: 0.9rem;">
                    <i class="bi bi-info-circle"></i>
                    <strong>Note:</strong> New users are created with the default password: <code>Password123!</code>
                </div>
            </div>
            <hr />

            <form method="post">
                <div class="form-group mb-3">
                    <label asp-for="Username" class="form-label">Username:</label>
                    <input asp-for="Username" class="form-control" placeholder="Enter username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email:</label>
                    <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Secure Submit</button>
            </form>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-info mt-3">@Model.Message</div>
            }
        </div>
    </div>
</div>