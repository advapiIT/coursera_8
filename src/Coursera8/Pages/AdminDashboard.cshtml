@page
@model AdminDashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">SafeVault Security Oversight</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <button type="button" class="btn btn-sm btn-outline-danger">System Lockdown</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-dark shadow">
                <div class="card-body">
                    <h5 class="card-title">Encrypted Records</h5>
                    <p class="card-text display-6">1,248</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-primary shadow">
                <div class="card-body">
                    <h5 class="card-title">Active Admin Sessions</h5>
                    <p class="card-text display-6">@User.Identity.Name (You)</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success shadow">
                <div class="card-body">
                    <h5 class="card-title">Security Status</h5>
                    <p class="card-text display-6">Optimal</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-light">
            <h5 class="mb-0">Recent Security Logs</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Timestamp</th>
                        <th>User</th>
                        <th>Action</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>2026-02-05 10:12:04</td>
                        <td>admin</td>
                        <td>Login Success</td>
                        <td><span class="badge bg-success">Success</span></td>
                    </tr>
                    <tr>
                        <td>2026-02-05 09:45:12</td>
                        <td>unknown_ip</td>
                        <td>Brute Force Attempt</td>
                        <td><span class="badge bg-danger">Blocked</span></td>
                    </tr>
                    <tr>
                        <td>2026-02-04 22:15:30</td>
                        <td>system_service</td>
                        <td>DB Optimization</td>
                        <td><span class="badge bg-info">Completed</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>